# Porta do servidor
PORT=3000

# Provedor de IA (openai ou gemini)
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=gpt-4o-mini

# Gemini Configuration (alternativo)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# WhatsApp Cloud API
WHATSAPP_TOKEN=your-whatsapp-access-token-here
WHATSAPP_PHONE_ID=your-phone-number-id-here
WA_API_VERSION=v21.0

# Webhook Configuration
WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token-here

# Segurança (implementação futura)
API_KEY=your-api-key-for-authentication
JWT_SECRET=your-jwt-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de IA
AI_TEMPERATURE=0.6
AI_MAX_TOKENS=500
AI_TIMEOUT=30000
