<style>
.testimonials {
  background: var(--bg-secondary);
}

.section-header {
  text-align: center;
  margin-bottom: 4rem;
}

.section-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background: linear-gradient(135deg, var(--secondary-color), var(--accent-color));
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 2rem;
  font-size: 0.875rem;
  font-weight: 500;
  margin-bottom: 1.5rem;
}

.section-badge i {
  width: 1rem;
  height: 1rem;
}

.section-header h2 {
  color: var(--text-primary);
  margin-bottom: 1rem;
}

.section-header p {
  font-size: 1.125rem;
  color: var(--text-secondary);
  max-width: 600px;
  margin: 0 auto;
}

.testimonials-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 2rem;
  margin-bottom: 4rem;
}

.testimonial-card {
  background: white;
  border-radius: 1.5rem;
  padding: 2rem;
  box-shadow: var(--shadow-medium);
  transition: all 0.3s ease;
  border: 1px solid var(--border-color);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.testimonial-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--secondary-color), var(--accent-color));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.testimonial-card:hover::before {
  opacity: 1;
}

.testimonial-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-large);
}

.testimonial-content {
  margin-bottom: 1.5rem;
}

.quote-icon {
  width: 3rem;
  height: 3rem;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  border-radius: 0.75rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  margin-bottom: 1.5rem;
}

.quote-icon i {
  width: 1.5rem;
  height: 1.5rem;
}

.testimonial-text {
  color: var(--text-secondary);
  line-height: 1.7;
  margin-bottom: 1.5rem;
  font-style: italic;
}

.rating {
  display: flex;
  gap: 0.25rem;
  margin-bottom: 0;
}

.star {
  width: 1.25rem;
  height: 1.25rem;
  color: var(--text-light);
}

.star.filled {
  color: var(--accent-color);
}

.testimonial-author {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.author-avatar {
  width: 3rem;
  height: 3rem;
  background: linear-gradient(135deg, var(--secondary-color), var(--accent-color));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  flex-shrink: 0;
}

.author-avatar i {
  width: 1.5rem;
  height: 1.5rem;
}

.author-info h4 {
  color: var(--text-primary);
  margin-bottom: 0.25rem;
  font-size: 1.125rem;
}

.author-info span {
  color: var(--text-light);
  font-size: 0.875rem;
  font-weight: 500;
}

.testimonials-cta {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  border-radius: 1.5rem;
  padding: 3rem 2rem;
  text-align: center;
  color: white;
  position: relative;
  overflow: hidden;
}

.testimonials-cta::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

.testimonials-cta h3 {
  color: white;
  margin-bottom: 1rem;
  font-size: 1.75rem;
  position: relative;
  z-index: 1;
}

.testimonials-cta p {
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 2rem;
  font-size: 1.125rem;
  position: relative;
  z-index: 1;
}

.testimonials-cta .btn {
  background: white;
  color: var(--primary-color);
  position: relative;
  z-index: 1;
}

.testimonials-cta .btn:hover {
  background: var(--bg-secondary);
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .testimonials-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .testimonial-card {
    padding: 1.5rem;
  }
  
  .section-header {
    margin-bottom: 3rem;
  }
  
  .testimonials-cta {
    padding: 2rem 1.5rem;
  }
  
  .testimonials-cta h3 {
    font-size: 1.5rem;
  }
}

@media (max-width: 480px) {
  .testimonial-card {
    padding: 1.25rem;
  }
  
  .quote-icon {
    width: 2.5rem;
    height: 2.5rem;
  }
  
  .quote-icon i {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  .author-avatar {
    width: 2.5rem;
    height: 2.5rem;
  }
  
  .author-avatar i {
    width: 1.25rem;
    height: 1.25rem;
  }
}
</style>

<script>
// Initialize Lucide icons
lucide.createIcons();

// Fade in animation on scroll
const observerOptions = {
  threshold: 0.1,
  rootMargin: '0px 0px -50px 0px'
};

const observer = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      entry.target.classList.add('visible');
    }
  });
}, observerOptions);

// Observe all fade-in elements in this section
document.querySelectorAll('.testimonials .fade-in').forEach(el => {
  observer.observe(el);
});
</script>
